@page
@model IT420.Pages.Admin.AddBlogTypeModel
@{
}

<h2>New Blog Type</h2>

<form method="post">
    <input type="hidden" asp-for="@Model.Type.blogTypeId" />
    <div class="form-group">
        <label asp-for="@Model.Type.type"></label>
        <input asp-for="@Model.Type.type" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.Type.type"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-primary" asp-page="./Admin">Cancel</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}