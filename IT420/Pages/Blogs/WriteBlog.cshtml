@page
@model IT420.Pages.Blogs.WriteBlogModel
@{
    ViewData["Title"] = "WriteBlog";
}

<h1>Write New Blog</h1>

<form enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Input.approved" value="false" />

    <div class="form-group">
        <label asp-for="Input.blogTypeId"></label>
        <select asp-for="Input.blogTypeId" class="form-control" asp-items="@Model.typeList"></select>
        <span class="text-danger" asp-validation-for="Input.blogTypeId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.blogImageURL"></label>
        <div class="custom-file">
            <input asp-for="Input.blogImageURL" class="form-control custom-file-input" />
            <label class="custom-file-label">Choose File...</label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Input.name"></label>
        <input asp-for="Input.name" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.body"></label>
        <textarea asp-for="Input.body" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Input.body"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-primary" asp-page="../index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}
